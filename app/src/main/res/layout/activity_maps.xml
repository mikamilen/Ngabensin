        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:context="com.example.root.ngabensin.nearbyplaces.MapsActivity" />

        <android.support.v7.widget.CardView
            android:id="@+id/cvCurrent"
            android:layout_centerHorizontal="true"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/map">


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/curentLocation"
                    android:layout_width="330dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="Current Location"
                    android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/B_Cur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:src="@drawable/ic_search_black_24dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvDestination"
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_below="@id/cvCurrent"
            android:layout_centerHorizontal="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal"
                android:gravity="center">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">



                <EditText
                    android:id="@+id/toLocation"
                    android:layout_width="330dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="Destination"
                    android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <!--<Button-->
                <!--android:id="@+id/B_to"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:onClick="onClick"/>-->

                <ImageButton
                    android:id="@+id/B_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:src="@drawable/ic_search_black_24dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/B_submit"
            android:layout_width="370dp"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:layout_below="@id/cvDestination"
            android:background="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#fff"/>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationInfo"
            android:layout_below="@id/cvDestination">

        <android.support.v7.widget.CardView
            android:id="@+id/cvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
